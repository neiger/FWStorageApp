<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Appium Android Automation Framework" parallel="methods" thread-count="1">

    <listeners>
        <listener class-name="general.MobileDriverManager">
            <!-- Mobile timeout and halt setup -->
            <parameter name="tmStatic" value="5"/>
            <parameter name="tmDynamic" value="10"/>

            <!--  Mobile Main Config Parameters  -->
            <parameter name="deviceType" value="nonGMS"/> <!-- GMS / nonGMS -->
            <parameter name="platformName" value="Android"/>
            <parameter name="platformVersion" value="13,11"/>  <!-- non-GMS Android 11 / GMS Android 12 -->
            <parameter name="deviceName" value="R3CTC0D3BFE,HWQYD22514501984"/> <!-- non-GMS HWQYD22514501984  GMS R3CTC0D3BFE Emulator emulator-5554 -->
            <parameter name="automationName" value="UiAutomator2"/>
            <parameter name="appPackage" value="com.omh.android.storage.sample"/>
            <parameter name="appActivity" value="com.omh.android.storage.sample.presentation.login.LoginActivity"/>
            <parameter name="noReset" value="true"/> <!-- True to prevent prompt for asking permissions again -->
            <parameter name="appiumServer" value="http://127.0.0.1:4723/wd/hub"/>
        </listener>
    </listeners>


    <!--  Test Case testing Parameters  -->

    <!--  Test Case Execution Order  -->
    <test name="Android Apps Test Cases">
        <classes>
            <!-- This class validates unsign in state and the correct signin process -->
            <class name="tests.StorageSampleLoginScreenTests">
                <methods>
                    <exclude name="FW_17_FW_18_verifyThatStorageLoginBtnIsDisplayed" />
                    <exclude name="FW_98_FW_114_FW_115_verifyThatUserCanTapXInBrowserOrTapOusideModal" />
                    <exclude name="FW_23_FW_97_verifyThatUserIsReturnedToSampleAppInLoggedInState" />
                </methods>
            </class>

            <!-- This class requires to be signed in first in the Google Account -->
            <class name="tests.StorageSampleLoggedScreenTests">
                <methods>
                    <exclude name="FW_102_FW_103_verifyUserCanChangeGridOrLinearLayoutViewInDrive" />
                    <exclude name="FW_43_FW_116_verifyUserCanNavigateBetweenFolders" />
                    <include name="createAFolder" />
                    <include name="createAFile" />

                    <!-- UPCOMING SCRIPTS TO BE AUTOMATED
                    <exclude name="verifyUserCanAddAFolder" />
                    <exclude name="verifyUserCanAddAFile" />
                    <exclude name="verifyUserCanDeleteAFolder" />
                    <exclude name="verifyUserCanDeleteAFile" />
                    -->
                </methods>
            </class>
        </classes>
    </test>

</suite>